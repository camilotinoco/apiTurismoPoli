<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Galería de Viajes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:padding="16dp"
        android:gravity="center"
        android:background="#E0E0E0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Cartagena -->
            <LinearLayout
                android:id="@+id/layout_foto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/cartagena"
                    android:scaleType="centerCrop"
                    android:contentDescription="Cartagena" />

                <TextView
                    android:id="@+id/txt_desc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toca para ver descripción"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:padding="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Eje Cafetero -->
            <LinearLayout
                android:id="@+id/layout_foto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ejecafetero"
                    android:scaleType="centerCrop"
                    android:contentDescription="Eje Cafetero" />

                <TextView
                    android:id="@+id/txt_desc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toca para ver descripción"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:padding="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- San Andrés -->
            <LinearLayout
                android:id="@+id/layout_foto3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/sanandres"
                    android:scaleType="centerCrop"
                    android:contentDescription="San Andrés" />

                <TextView
                    android:id="@+id/txt_desc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toca para ver descripción"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:padding="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Bogotá -->
            <LinearLayout
                android:id="@+id/layout_foto4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/bogota"
                    android:scaleType="centerCrop"
                    android:contentDescription="Bogotá" />

                <TextView
                    android:id="@+id/txt_desc4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toca para ver descripción"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:padding="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Tayrona -->
            <LinearLayout
                android:id="@+id/layout_foto5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/tayrona"
                    android:scaleType="centerCrop"
                    android:contentDescription="Tayrona" />

                <TextView
                    android:id="@+id/txt_desc5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toca para ver descripción"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:padding="8dp"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
